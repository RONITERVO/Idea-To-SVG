rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read their own document; writes are server-side only
    match /users/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false;
    }

    // Users can only read their own purchases; writes are server-side only
    match /purchases/{id} {
      // Client queries for match /purchases/{id} must include where('uid', '==', request.auth.uid).
      // resource.data.uid may be null for missing docs; Firestore denies null comparisons by default.
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
      allow write: if false;
    }
  }
}
