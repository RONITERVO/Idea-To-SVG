# Required: server-side Gemini API key used by Firebase Functions
GEMINI_API_KEY=AIzaSy_your_server_key

# Set to true in production after App Check is configured and verified
ENFORCE_APP_CHECK=true

# Optional token pricing overrides (defaults shown)
INPUT_TOKEN_COST_PER_MILLION_USD=2
OUTPUT_TOKEN_COST_PER_MILLION_USD=12

# Credit economics (gross credit value before store/tax reductions)
CREDIT_GROSS_PRICE_USD=0.50
PLAY_STORE_FEE_RATE=0.15
TAX_RATE=0.30

# Smooth fractional billing curve
BILLING_SAFETY_MARGIN_RATE=0.03
BASELINE_CREDITS=0.85
BASELINE_CREDITS_DECAY=0.35
MIN_BILLED_CREDITS=0.01
CREDIT_DECIMALS=3

# Input token safety cap (must stay below 200k due provider pricing tier)
INPUT_TOKEN_CAP=199999

# Reservation estimate tuning
ESTIMATED_PLAN_OUTPUT_TOKENS=1000
ESTIMATED_GENERATE_OUTPUT_TOKENS=12000
ESTIMATED_EVALUATE_OUTPUT_TOKENS=500
ESTIMATED_REFINE_OUTPUT_TOKENS=12000
PLAN_FOLLOW_UP_INPUT_MULTIPLIER=1.1
EVALUATE_FOLLOW_UP_INPUT_MULTIPLIER=1.1

# Notes:
# - Ledger charges settle with fractional precision.
# - Per-generation estimate labels are shown as whole credits in UI.
